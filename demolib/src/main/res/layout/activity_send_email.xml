<?xml version="1.0" encoding="utf-8"?>

<!--Relative Layout-->
<RelativeLayout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".activity.SendEmailActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/ll1"
        android:weightSum="10"
        android:layout_margin="15dp">
        <!--text Views for label-->
        <TextView
            android:id="@+id/textView1"
            android:textColor="#0F9D58"
            android:text="Send To:"
            android:layout_weight="3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"/>
        <!--Edit text for email id-->
        <EditText
            android:id="@+id/sendToET"
            android:layout_weight="7"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:inputType="textEmailAddress"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/ll2"
        android:layout_margin="15dp"
        android:layout_below="@+id/ll1"
        android:weightSum="10">
        <!--text Views for label-->
        <TextView
            android:id="@+id/textView2"
            android:textColor="#0F9D58"
            android:text="Email Subject:"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"/>
        <!--Edit text for email id-->
        <EditText
            android:id="@+id/subjectET"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="7"
            android:inputType="textEmailSubject|textNoSuggestions"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/ll3"
        android:layout_below="@+id/ll2"
        android:layout_margin="15dp"
        android:weightSum="10">
        <!--text Views for label-->
        <TextView
            android:id="@+id/textView3"
            android:textColor="#0F9D58"
            android:text="Email Body:"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"/>
        <!--Edit text for email id-->
        <EditText
            android:id="@+id/bodyET"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="7"
            android:inputType="text|textMultiLine|textNoSuggestions"/>
    </LinearLayout>

    <!--Button to send email-->
    <Button
        android:id="@+id/send_email_btn"
        android:text="Send email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ll3"
        android:layout_alignParentRight="true"
        android:layout_marginRight="15dp"
        android:background="#0F9D58"
        android:textColor="@color/white"
        android:padding="15dp"/>
</RelativeLayout>
