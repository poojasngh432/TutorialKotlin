<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/grey_disabled" />
            <corners android:radius="@dimen/dp_20" />
        </shape>
    </item>
    <item android:bottom="2dp" android:left="1dp" android:right="1dp" android:state_pressed="true" android:top="0dp">
        <shape android:shape="rectangle">
            <corners android:radius="@dimen/dp_20" />
            <stroke android:width="@dimen/dp_1" android:color="@color/light_bg" />
            <solid android:color="@color/one_channel_theme_color" />
        </shape>
    </item>
    <item android:bottom="2dp" android:left="1dp" android:right="1dp" android:state_focused="true" android:top="0dp">
        <shape android:shape="rectangle">
            <corners android:radius="@dimen/dp_20" />
            <stroke android:width="@dimen/dp_1" android:color="@color/light_bg" />
            <solid android:color="@color/one_channel_theme_color" />
        </shape>
    </item>
    <item android:bottom="2dp" android:left="1dp" android:right="1dp" android:top="0dp">
        <shape android:shape="rectangle">
            <solid android:color="@color/white" />
            <corners android:radius="@dimen/dp_20" />
            <padding android:bottom="@dimen/dp_10" android:left="@dimen/dp_10" android:right="@dimen/dp_10" android:top="@dimen/dp_10" />
            <stroke android:width="@dimen/dp_1" android:color="@color/light_bg" />
        </shape>
    </item>
</layer-list>