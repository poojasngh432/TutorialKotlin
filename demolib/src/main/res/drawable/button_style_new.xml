<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <corners android:radius="@dimen/dp_7" />
            <stroke android:width="@dimen/dp_1" android:color="@color/gray_d" />
            <gradient android:angle="-90" android:endColor="@color/light_green" android:startColor="@color/light_green" />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle">
            <corners android:radius="@dimen/dp_7" />
            <stroke android:width="@dimen/dp_1" android:color="@color/gray_d" />
            <solid android:color="@color/green_d" />
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="@dimen/dp_7" />
            <stroke android:width="@dimen/dp_1" android:color="@color/gray_d" />
            <gradient android:angle="-90" android:endColor="@color/light_green" android:startColor="@color/light_green" />
        </shape>
    </item>
</selector>