<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="@dimen/dp_15" />
            <gradient
                android:angle="270"
                android:endColor="#e7edee"
                android:startColor="@color/light_gray" />
        </shape>
    </item>

    <item
        android:bottom="2dp"
        android:left="2dp"
        android:right="2dp"
        android:top="1dp">
        <shape android:shape="rectangle">
            <corners android:radius="15dp" />
            <solid android:color="#ffffff" />
            <padding
                android:bottom="5dp"
                android:left="5dp"
                android:right="5dp"
                android:top="5dp" />
            <stroke
                android:width="1dp"
                android:color="#e7edee" />
        </shape>
    </item>
</layer-list>